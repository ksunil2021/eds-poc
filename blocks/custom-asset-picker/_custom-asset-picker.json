{
    "definitions": [
      {
        "title": "Custom Asset Picker",
        "id": "custom-asset-picker",
        "plugins": {
          "xwalk": {
            "page": {
              "resourceType": "core/franklin/components/block/v1/block",
              "template": {
                "name": "Custom Asset Picker",
                "model": "custom-asset-picker"
              }
            }
          }
        }
      }
    ],
    "models": [
      {
        "id": "custom-asset-picker",
        "fields": [
          {
            "component": "boolean",
            "label": "Use Dynamic Media",
            "name": "useDM",
            "value": "false",
            "valueType": "boolean"
            },
            {
              "component": "reference",
              "valueType": "string",
              "name": "image",
              "label": "Image",
              "multi": false,
              "condition": { "===": [{"var" : "useDM"}, false] }
          },
          {
            "component": "text",
            "name": "imageAlt",
            "label": "Alt Text",
            "valueType": "string",
            "condition": { "===": [{"var" : "useDM"}, false] }
          },
          {
            "component": "custom-asset-namespace:custom-asset",
            "configUrl": "/content/dam/dynamicmedia.assetpicker.config.json",
            "valueType": "string",
            "name": "cc_image",
            "label": "Dynamic Media Image file",
            "multi": false,
            "condition": { "===": [{"var" : "useDM"}, true] }
          },
          {
            "component": "text",
            "name": "cc_imageText",
            "label": "Alt Text",
            "valueType": "string",
            "condition": { "===": [{"var" : "useDM"}, true] }
          },
          {
            "component": "boolean",
            "label": "Auto Smart Crop",
            "name": "cc_smartCrop",
            "value": "false",
            "valueType": "boolean",
            "condition": { "===": [{"var" : "useDM"}, true] }
          },
          {
            "component": "text",
            "valueType": "string",
            "name": "cc_queryparams",
            "label": "Image Query Params",
            "description": "Add custom query params to the image URL",
            "condition": { "===": [{"var" : "useDM"}, true] }
          }
        ]
      }
    ],
    "filters": []
  }
